{
  "manifest_version": 3,
  "name": "Vantedge - Betting Analytics",
  "version": "1.0.0",
  "description": "Track your bets automatically, find value opportunities, and boost your betting edge on Nigerian sportsbooks.",
  "author": "Vantedge",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "https://www.bet9ja.com/*",
    "https://sportybet.com/*",
    "https://www.sportybet.com/*",
    "https://betking.com/*",
    "https://www.betking.com/*",
    "https://1xbet.com/*",
    "https://www.1xbet.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.bet9ja.com/*"
      ],
      "js": ["content-scripts/bet9ja.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://sportybet.com/*",
        "https://www.sportybet.com/*"
      ],
      "js": ["content-scripts/sportybet.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://betking.com/*",
        "https://www.betking.com/*"
      ],
      "js": ["content-scripts/betking.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/*.css", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
